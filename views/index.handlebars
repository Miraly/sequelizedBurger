<div class="container">
    <div class="row">

        <div class="col-md-4">
              <h2>Wanted Burgers</h2>
                    <ul class="list-group">
                        {{#each burger}}
                          {{#unless this.devoured}}       
                            <li class="list-group-item list-group-item-warning">>
                                <span>
                                      {{this.id}}. {{this.burger_name}}
                                       <form action="/{{this.id}}?_method=PUT" method="POST">
                                        <input type="hidden" name="id" value="{{this.id}}">
                                        <button class="devour_btn" type="submit">Devour it!!</button>
                                      </form>
                                </span>
       
                            </li>   
                        {{/unless}} 
                      {{/each}}
                    </ul>
        </div>
        <div class="col-md-4 col-md-offset-2"> 
            <h2>Devoured List</h2>    
            <ul class="list-group">
                {{#each burger}}
                {{#if this.devoured}}    
                  <li class="list-group-item list-group-item-info">
                    <p>
                      {{this.id}}. {{this.burger_name}}         
                    </p>
                  </li>      
                {{/if}}   
              {{/each}}
            </ul>
        </div>
     </div>
          


  <div class="row">
          <div class="col-md-6 col-md-offset-3">
              <h3>Add a burger</h3>
                    <form method="POST" action="/" class="button">
                      <textarea class="form-control" rows="3" type="text" name="burger"></textarea>
                      
                      <button style="background-color: #FFC600; color: #01B300; height: 50px; margin-right: auto; margin-left: auto" type="submit">Save burger!</button>
                      
                    </form>
           </div>
  </div>
